# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false
WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql://insight_user:insight_password@localhost:5432/insight_db
REDIS_URL=redis://localhost:6379/0

# ML Model Configuration
MODEL_NAME=distilbert-base-uncased
MODEL_PATH=./data/models/sentiment_model
TOKENIZER_PATH=./data/models/tokenizer
MAX_SEQUENCE_LENGTH=512
BATCH_SIZE=32
MODEL_CACHE_SIZE=1000

# Data Sources
NEWSAPI_KEY=your-newsapi-key
ALPHA_VANTAGE_KEY=your-alpha-vantage-key
YAHOO_FINANCE_ENABLED=true

# ETL Configuration
AIRFLOW_HOME=./airflow
AIRFLOW_WEBSERVER_PORT=8080
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Cloud Configuration (AWS)
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=insight-data-bucket
ECR_REPOSITORY=insight-app

# Cloud Configuration (GCP)
GCP_PROJECT_ID=your-gcp-project
GCP_REGION=us-central1
GCS_BUCKET=insight-data-bucket
GCR_REPOSITORY=gcr.io/your-project/insight

# Feature Flags
ENABLE_MODEL_DRIFT_DETECTION=true
ENABLE_A_B_TESTING=false
ENABLE_RATE_LIMITING=true
ENABLE_AUTHENTICATION=true
ENABLE_CACHING=true

# Performance Tuning
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
MODEL_WARM_UP_REQUESTS=10
PREDICTION_CACHE_TTL=3600

# Development
JUPYTER_PORT=8888
TENSORBOARD_PORT=6006
MLFLOW_TRACKING_URI=http://localhost:5000
